@model Endereco
@{
    ViewData["Title"] = "Cadastrar endereco";
}

<div class="text-center">
    <h1 class="display-4">Cadastrar Endereço</h1>
</div>
<form asp-controller="Endereco" asp-action="Criar" method="post">
    <div class="form-group">
        <label for="id">Id</label>
        <input type="text" asp-for="Id" class="form-control" placeholder="Digite o id">
    </div>
    <div class="form-group">
        <label for="cidade">Cidade</label>
        <input type="text" asp-for="Cidade" class="form-control" placeholder="Digite a cidade">
    </div>
    <div class="form-group">
        <label for="rua">Rua</label>
        <input type="text" asp-for="Rua" class="form-control" placeholder="Digite a rua">
    </div>
    <div class="form-group">
        <label for="numero">Numero</label>
        <input type="text" asp-for="Numero" class="form-control" placeholder="Digite o número">
    </div>
    <div class="form-group">
        <label for="estado">Estado</label>
        <input type="text" asp-for="Estado" class="form-control" placeholder="Digite o estado">
    </div>
    <div class="form-group">
        <label for="bairro">Bairro</label>
        <input type="text" asp-for="Bairro" class="form-control" placeholder="Digite o bairro">
    </div>
    <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Endereco" asp-action="Index" role="button">Voltar</a>
</form>
