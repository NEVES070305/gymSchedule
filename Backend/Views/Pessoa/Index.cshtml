@model List<Pessoa>
@{
    ViewData["Title"] = "Gerenciar Pessoa";
}

<div class="text-center">
    <div class="container">
        <div style="display:flex; flex-direction:row; justify-content:space-around;">
            <h4>Pessoas</h4>
            <a class="btn btn-primary" style="margin-right:5px;" asp-controller="Pessoa" asp-action="Cadastrar">Cadastrar</a>
        </div>
    </div>
</div>
<div id="Listar_Pessoa" style="display:flex inline-flex; flex-direction:column;">
    <h1 class="display-4">Listagem de contatos</h1>

    <table id="table-contatos" class="display" style="width:100%">
        <thead>
            <tr>
                <th scope="col">CPF</th>
                <th scope="col">Nome</th>
                <th scope="col">Sobrenome</th>
                <th scope="col">Ultimo Nome</th>
                <th scope="col">Username</th>
                <th scope="col">Endereço</th>
                <th scope="col">RoleName</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var pessoa in Model)
                {
                    <tr>
                        <th scope="row">@pessoa.CPF</th>
                        <td>@pessoa.Nome/td>
                        <td>@pessoa.Sobrenome</td>
                        <td>@pessoa.UltimoNome</td>
                        <td>@pessoa.Username</td>
                        <td>@pessoa.EnderecoId</td>
                        <td>@pessoa.RoleName</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" asp-action="Editar" asp-controller="Pessoa" asp-route-id="@pessoa.CPF" class="btn btn-primary">Editar</a>
                                <a role="button" asp-action="ApagarConfirmacao" asp-controller="Pessoa" asp-route-id="@pessoa.CPF" class="btn btn-danger">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="odd"><td valign="top" colspan="5">Nenhuma pessoa encontrada</td></tr>
            }
        </tbody>
    </table>
</div>