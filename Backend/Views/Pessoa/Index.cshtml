@model Pessoa
@{
    ViewData["Title"] = "Cadastrar Pessoa";
}

<div class="text-center">
    <h1 class="display-4">Cadastrar Pessoa</h1>
</div>
<form asp-controller="Pessoa" asp-action="Criar" method="post">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o seu nome">
    </div>
    <div class="form-group">
        <label for="idendereco">Id Endereco</label>
        <input type="text" asp-for="EnderecoId" class="form-control" placeholder="Digite o id do endereço">
    </div>
    <div class="form-group">
        <label for="CPF">CPF</label>
        <input type="text" asp-for="CPF" class="form-control" placeholder="Digite o seu CPF">
    </div>
    <div class="form-group">
        <label for="role">Role</label>
        <input type="text" asp-for="RoleName" class="form-control" placeholder="Digite seu cargo">
    </div>
    <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Endereco" asp-action="Index" role="button">Voltar</a>
</form>
